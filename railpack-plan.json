{
  "$schema": "https://schema.railpack.com",
  "steps": [
    {
      "name": "install-root",
      "commands": [
        "rm -rf node_modules/.cache || true",
        "npm_config_cache=/root/.npm npm ci --no-audit --no-fund"
      ]
    },
    {
      "name": "build-bot",
      "commands": [
        "npm_config_cache=/root/.npm npm run build --workspace=bot"
      ]
    },
    {
      "name": "build-web",
      "commands": [
        "npm run build --workspace=web"
      ]
    },
    {
      "name": "start-bot",
      "commands": [
        "npm run start --workspace=bot"
      ]
    }
  ]
}
