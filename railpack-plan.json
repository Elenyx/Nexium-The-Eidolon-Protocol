{
  "$schema": "https://schema.railpack.com",
  "steps": [
    {
      "name": "root-install",
      "commands": [
        "npm ci"
      ]
    },
    {
      "name": "build-workspaces",
      "commands": [
        "npm run build --workspace=bot",
        "npm run build --workspace=web"
      ]
    },
    {
      "name": "start",
      "commands": [
        "npm run start --workspace=web"
      ]
    }
  ]
}
