{
  "name": "nexium-rpg-bot",
  "version": "1.0.0",
  "description": "Nexium RPG: The Eidolon Protocol - A sophisticated Discord RPG bot",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "ensure-db": "tsx src/database/init.ts",
    "build": "tsc -b tsconfig.json",
    "legacy-build": "node legacy/simplified-build.js",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "deploy": "npm run build && npm run deploy-commands",
    "deploy-commands": "cross-env NODE_ENV=production node dist/deploy-commands.js",
    "seed": "tsx src/database/seeds/seed.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "discord",
    "bot",
    "rpg",
    "gaming"
  ],
  "author": "Nexium RPG Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "discord.js": "^14.19.3",
    "discraft": "^1.7.8",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "pg": "^8.12.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^1.6.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0"
  },
  "vitest": {
    "setupFiles": [
      "test/setup.js"
    ],
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "json",
        "html"
      ]
    }
  }
}
