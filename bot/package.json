{
  "name": "nexium-rpg-bot",
  "version": "1.0.0",
  "description": "Nexium RPG: The Eidolon Protocol - A sophisticated Discord RPG bot",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "ensure-db": "tsx src/database/init.ts",
    "build": "node simplified-build.js",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "deploy": "npm run build && npm run deploy-commands",
    "deploy-commands": "cross-env NODE_ENV=production node dist/deploy-commands.js",
    "seed": "tsx src/database/seed.ts",
    "postinstall": "npm run build",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "discord",
    "bot",
    "rpg",
    "gaming"
  ],
  "author": "Nexium RPG Team",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^10.0.0",
    "discord.js": "^14.19.3",
    "discraft": "^1.7.8",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "vitest": {
    "setupFiles": [
      "test/setup.js"
    ],
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "json",
        "html"
      ]
    }
  }
}
